{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":maintainLockFilesMonthly"],
  "schedule": ["on tuesday"],
  "enabledManagers": ["github-actions", "pixi", "cargo"],
  "commitMessagePrefix": "chore(ci):",
  "ignorePaths": ["**/examples/**", "**/docs/**", "**/tests/**"],
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"]
    },
    {
      "description": "We run multiple macOS runner versions on purpose since 13 runs on x86_64",
      "matchPackageNames": "macos",
      "matchManagers": ["github-actions"],
      "enabled": false
    },
    {
      "groupName": "Pixi",
      "matchManagers": ["pixi"],
      // We want to update Rust manually and keep it in sync with rust-toolchain
      "excludePackagePatterns": ["rust"]
    },
    {
      "groupName": "Pixi-Lock",
      "matchManagers": ["pixi"],
      "matchUpdateTypes": ["lockFileMaintenance"]
    },
    {
      "groupName": "Cargo",
      "matchManagers": ["cargo"],
      // We want to update rattler manually
      "excludePackagePatterns": ["rattler*", "file_url"]
    },
    {
      "groupName": "Cargo-Lock",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["lockFileMaintenance"]
    }
  ]
}
